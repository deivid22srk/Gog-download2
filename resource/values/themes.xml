<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme compatible with Material 1.10 -->
  <style name="Theme.GOGDownloader" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Custom Material You implementation for Material 1.10 -->
    
    <!-- Primary colors - will be overridden by Dynamic Color -->
    <item name="colorPrimary">@color/material_primary</item>
    <item name="colorPrimaryVariant">@color/material_primary_dark</item>
    <item name="colorOnPrimary">@android:color/white</item>
    
    <!-- Secondary colors -->
    <item name="colorSecondary">@color/material_secondary</item>
    <item name="colorSecondaryVariant">@color/material_secondary_dark</item>
    <item name="colorOnSecondary">@android:color/white</item>
    
    <!-- Background colors -->
    <item name="android:colorBackground">@color/material_background</item>
    <item name="colorSurface">@color/material_surface</item>
    <item name="colorOnSurface">@android:color/black</item>
    
    <!-- Status bar and navigation bar styling -->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    
    <!-- Enable edge-to-edge experience -->
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
    <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>

    <!-- Material You Dialogs -->
    <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
    <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
  </style>
</resources>
